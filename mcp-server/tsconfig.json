{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "@/clients/*": ["./clients/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/umb-management-api/*": ["./api/umbraco/management/*"],
      "@/constants/*": ["./constants/*"]
    }
  },
  "files": ["global.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
